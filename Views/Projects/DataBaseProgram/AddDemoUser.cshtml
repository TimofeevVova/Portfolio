<div class="container">
    <div class="row">
        <h3>Добавление нового пользователя</h3>

        <div class="mb-3">
            <label class="form-label">Имя</label>
            <input type="text" class="form-control" id="nameDemo">
        </div>

        <div class="mb-3">
            <label class="form-label">Фамилия</label>
            <input type="text" class="form-control" id="sirnameDemo">
        </div>

        <div class="mb-3">
            <label class="form-label">Дата рождения</label>
            <input type="date" class="form-control" id="dateOdBirdthDemo">
        </div>

        <div class="mb-3">
            <label class="form-label">Город</label>
            <input type="text" class="form-control" id="sityDemo">
        </div>

        <div class="mb-3">
            <label class="form-label">Телефон</label>
            <input type="tel" class="form-control" id="phoneDemo">
        </div>

        <div class="mb-3">
            <label class="form-label">Почта</label>
            <input type="email" class="form-control" id="emailDemo">
        </div>

        <div class="mb-3">
            <label class="form-label">Роль</label>
            <select class="form-select" id="roleDemo">
                <option value="admin">Администратор</option>
                <option value="user">Обычный пользователь</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Зарплата</label>
            <input type="text" class="form-control" id="salaryDemo">
        </div>

        <div class="mb-3">
            <label class="form-label">Личный ID</label>
            <input type="text" class="form-control" id="privateIdDemo">
        </div>
    </div>

    <button id="addDemoUser" class="btn btn-primary">Добавить</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">Отмена</button>
</div>
